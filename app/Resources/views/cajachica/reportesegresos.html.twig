 {% block js_extend %}

  
      <script  type="text/javascript">
 $(document).ready(function(){
              
var fecha =new   Date();
var dia = fecha.getDate();
var mes = fecha.getMonth();
var anho = fecha.getFullYear();

    if (mes<10){
        mes="0"+(mes+1);
    }
    
    
    if(dia<10){
        dia = "0"+dia; 
    }

 var fechaFinal = anho+"-"+mes+"-"+dia;


$('#txtFechaInicio').Zebra_DatePicker({
     format: 'Y-m-d',
    direction: -1,
    pair: $('#txtFechaFin')
});

     
  $('#txtFechaFin').Zebra_DatePicker({
     format: 'Y-m-d',
     direction: [true, fechaFinal]
});       
              

            $(document).on("click", "#btnBuscarReportesPorIngresosCajachica", function(){
               var contador =0;
                    var fechaInicio = $("#txtFechaInicio").val();
                    var fechaFin = $("#txtFechaFin").val();
                    

                    if(fechaInicio=="" && fechaFin==""){
                            fechaInicio=0;
                            fechaFin=0;
                            

                     }else if(fechaInicio!="" && fechaFin ==""){
                         contador=contador+1;
                     }else if(fechaInicio=="" && fechaFin!=""){
                         contador=contador+1;
                     }
                     if(contador==0){
                         
                          var url=Routing.generate('verPDFEgresosCajaChica',{fechaInicio: fechaInicio, fechaFin: fechaFin});
                          window.open(url,"_blank"); 
                                     
                         
                     }else{
                         swal("Error!", "Debes seleccionar las dos fechas", "error");
                         
                     }
                     
                                        
                                        

               
            });
            

            
           
        });
        
      

        
      </script>
      
      
